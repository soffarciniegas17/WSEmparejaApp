<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="12"
        >

        <TextView
            android:text="jugador1"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/moradoOscuro"
            android:textSize="18dp" />


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp"



            >
            <ImageView

            android:layout_width="match_parent"
                android:padding="4dp"
            android:src="@drawable/settings"
            android:layout_height="match_parent"
            android:background="@color/moradoOscuro"
            android:onClick="configuracion" />


        </android.support.v7.widget.CardView>



        <TextView
            android:layout_weight="5"
            android:id="@+id/tp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/moradoOscuro"
            android:text="jugador2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


    </LinearLayout>



        <ImageView
            android:layout_width="267dp"
            android:layout_height="118dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logoem" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="12dp"
        card_view:cardCornerRadius="12dp">
    <Button

        android:textAlignment="textStart"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:text="Jugar"
        android:onClick="jugar"
        android:paddingLeft="20dp"
        android:background="@drawable/anim_botonplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlCompat" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="12dp"
        card_view:cardCornerRadius="12dp">

    <Button
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textAlignment="textStart"
        android:paddingLeft="27dp"


        android:onClick="ScoresShow"
        android:text="Puntajes"
        android:background="@drawable/anim_botonscores"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:ignore="RtlCompat" />
    </android.support.v7.widget.CardView>

</LinearLayout>