<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fondo"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tp1"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:background="@color/Amarrillofondo"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tp2"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="47dp"
            android:background="@color/AmarilloSuave"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="118dp"
            android:background="@drawable/logoempareja" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/anim_boton_verde"
            android:onClick="configuracion" />

    </LinearLayout>

    <Button
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:text="Jugar"
        android:layout_marginTop="20dp"
        android:onClick="jugar"
        android:background="@drawable/anim_botonplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />

    <Button
        android:textSize="35dp"
        android:textColor="@android:color/white"
        android:textAlignment="textStart"
        android:layout_marginTop="15dp"
        android:onClick="ScoresShow"
        android:text="Puntajes"
        android:background="@drawable/anim_botonscores"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />

</LinearLayout>