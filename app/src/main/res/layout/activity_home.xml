<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fondo"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tp1"
            android:layout_width="170dp"
            android:textSize="18dp"
            android:layout_height="43dp"
            android:background="@color/Amarrillofondo" />

        <TextView
            android:layout_marginLeft="47dp"
            android:id="@+id/tp2"
            android:textSize="18dp"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@color/AmarilloSuave" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:background="@drawable/logoempareja" />

        <Button
            android:background="@drawable/anim_boton_verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button

        android:layout_marginTop="20dp"
        android:onClick="jugar"
        android:background="@drawable/anim_botonplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button

        android:layout_marginTop="20dp"
        android:onClick="jugar"
        android:background="@drawable/anim_botonscores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>